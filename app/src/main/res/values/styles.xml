<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="DriveScoreCircleProgressStyle">@style/DriveScoreCircleProgress</item>
    </style>
    
    <style name="DriveScoreCircleProgress">
        <item name="description_text_size" >11dp</item>
        <item name="score_text_size" >39dp</item>
        <item name="first_circle_color">#91eccd</item>
        <item name="second_circle_color">#91eccd</item>
        <item name="third_circle_color">#91eccd</item>
        <item name="score_text_color">#f9f9f9</item>
        <item name="score">50.0</item>
        <item name="description_text_color">@android:color/black</item>
        <item name="description_text_margin_bottom">28dp</item>
        <item name="score_text_margin_bottom">43dp</item>
        <item name="description_text">@string/old_driver_score</item>
    </style>

</resources>
